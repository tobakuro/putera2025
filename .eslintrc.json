{
  "extends": ["next/core-web-vitals", "prettier"],
  "plugins": ["unused-imports"],
  "rules": {
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "unused-imports/no-unused-imports": "error",
    "react/no-unknown-property": [
      "error",
      {
        "ignore": [
          "args",
          "position",
          "rotation",
          "scale",
          "geometry",
          "material",
          "castShadow",
          "receiveShadow",
          "object",
          "dispose"
        ]
      }
    ]
  }
}
